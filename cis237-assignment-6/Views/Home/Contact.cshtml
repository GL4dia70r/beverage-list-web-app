@{
    ViewData["Title"] = "Contact Page";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
	<h1 class="display-4">Contact Us</h1>
</div>
	<form class="form">
	<h3>Contact Information</h3>
	<div id="firstname">*First name: <input type="text" name="firstname" required width="120px" class="firstname"></div><br />
	<div id="lastname">*Last name: <input type="text" name="lastname" required class="firstname"></div><br />
	<div id="email">*Email:	<input type="email" name="email" required width="180px" class="email"></div><br />
	<div id="phone">Phone:	<input type="text" name="phone" class="phone"></div><br />
	<div id="comments">Comments: <input type="text" name="comments" width="300px" height="350px" class="comment"></div><br />

	<div class="text-center">
		<button type="submit" value="Submit"><a href="https://localhost:44333/Home/Submitted">Submit</a></button>
		&nbsp;
		<button type="reset" value="Reset">Reset</button>
	</div>
	</form>
